---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/ui/Container.astro";
import Title from "@/components/ui/Title.astro";
import Link from "@/components/ui/Link.astro";
---

<Layout
  title="404 - Page Not Found | Karson Nichols"
  description="The page you're looking for doesn't exist. Let's get you back on track."
>
  <section class="relative min-h-[90vh] flex items-center justify-center py-12 overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-br from-blue-base/5 via-transparent to-orange-base/5"
    >
    </div>
    <div
      class="absolute top-20 left-10 w-72 h-72 bg-blue-base/10 rounded-full blur-3xl animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-orange-base/10 rounded-full blur-3xl animate-pulse"
      style="animation-delay: 1s;"
    >
    </div>

    <Container classList="relative z-10 py-0">
      <div class="max-w-5xl mx-auto text-center">
        <div class="relative w-full max-w-4xl mx-auto mb-12">
          <svg viewBox="0 0 800 300" class="w-full h-auto" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1">
                  <animate
                    attributeName="stop-color"
                    values="#3B82F6;#F97316;#3B82F6"
                    dur="4s"
                    repeatCount="indefinite"></animate>
                </stop>
                <stop offset="50%" style="stop-color:#F97316;stop-opacity:1">
                  <animate
                    attributeName="stop-color"
                    values="#F97316;#3B82F6;#F97316"
                    dur="4s"
                    repeatCount="indefinite"></animate>
                </stop>
                <stop offset="100%" style="stop-color:#3B82F6;stop-opacity:1">
                  <animate
                    attributeName="stop-color"
                    values="#3B82F6;#F97316;#3B82F6"
                    dur="4s"
                    repeatCount="indefinite"></animate>
                </stop>
              </linearGradient>

              <filter id="glow">
                <feGaussianBlur stdDeviation="4" result="coloredBlur"></feGaussianBlur>
                <feMerge>
                  <feMergeNode in="coloredBlur"></feMergeNode>
                  <feMergeNode in="SourceGraphic"></feMergeNode>
                </feMerge>
              </filter>
            </defs>

            <text
              x="50%"
              y="50%"
              font-family="system-ui, -apple-system, sans-serif"
              font-size="240"
              font-weight="900"
              fill="url(#gradient1)"
              text-anchor="middle"
              dominant-baseline="middle"
              filter="url(#glow)"
              class="svg-404"
            >
              404
            </text>

            <text
              x="50%"
              y="50%"
              font-family="system-ui, -apple-system, sans-serif"
              font-size="240"
              font-weight="900"
              fill="none"
              stroke="url(#gradient1)"
              stroke-width="3"
              text-anchor="middle"
              dominant-baseline="middle"
              class="svg-404-stroke"
            >
              404
              <animate
                attributeName="stroke-dasharray"
                values="0,2000;2000,0;0,2000"
                dur="8s"
                repeatCount="indefinite"></animate>
            </text>
          </svg>
        </div>

        <div class="space-y-4 mb-12">
          <Title tag="h1" variant="h1" classList="!text-4xl md:!text-6xl"> Page Not Found </Title>
          <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
            The page you're looking for doesn't exist. Let's get you back on track.
          </p>
        </div>

        <div class="flex flex-col md:flex-row gap-4 justify-center py-10">
          <Link to="/" variant="filled" classList="w-full md:flex-1 text-center"> Go Home </Link>
          <Link to="/projects/" variant="outline" classList="w-full md:flex-1 text-center">
            View Projects
          </Link>
        </div>

        <div>
          <p class="text-sm text-gray-500 mb-4">Quick Navigation</p>
          <div class="flex flex-wrap gap-3 justify-center items-center">
            <a
              href="/about/"
              class="text-blue-base hover:text-orange-base transition-colors text-sm font-semibold underline decoration-2 underline-offset-4"
            >
              About
            </a>
            <span class="text-gray-300 leading-none">•</span>
            <a
              href="/contact/"
              class="text-blue-base hover:text-orange-base transition-colors text-sm font-semibold underline decoration-2 underline-offset-4"
            >
              Contact
            </a>
            <span class="text-gray-300 leading-none">•</span>
            <a
              href="/blog/"
              class="text-blue-base hover:text-orange-base transition-colors text-sm font-semibold underline decoration-2 underline-offset-4"
            >
              Blog
            </a>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <style>
    .svg-404 {
      transition: transform 0.3s ease;
    }

    .svg-404:hover {
      transform: scale(1.02);
    }
  </style>
</Layout>
