---
import Layout from "@/layouts/Layout.astro";
import Title from "../components/ui/Title.astro";
import Container from "../components/ui/Container.astro";
import Link from "../components/ui/Link.astro";
---

<Layout
  title="Thank You | Karson Nichols - Web Developer & Consultant"
  description="Thank you for reaching out to Karson Nichols. Your message has been received, and youâ€™ll get a response shortly. Looking forward to connecting with you!"
>
  <script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js" defer async
  ></script>

  <section class="relative py-16">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col items-center text-center space-y-8">
          <div class="relative animate-scale-in">
            <div class="absolute inset-0 bg-blue-base/20 rounded-full blur-3xl animate-pulse"></div>
            <svg
              class="relative w-32 h-32 md:w-40 md:h-40"
              viewBox="0 0 200 200"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <circle
                cx="100"
                cy="100"
                r="90"
                stroke="url(#gradient1)"
                stroke-width="4"
                fill="none"
                class="animate-draw-circle"></circle>
              <path
                d="M60 95 L90 125 L140 75"
                stroke="url(#gradient2)"
                stroke-width="8"
                stroke-linecap="round"
                stroke-linejoin="round"
                fill="none"
                class="animate-draw-check"></path>
              <defs>
                <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#032759;stop-opacity:1"></stop>
                  <stop offset="100%" style="stop-color:#021a3a;stop-opacity:1"></stop>
                </linearGradient>
                <linearGradient id="gradient2" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#F34605;stop-opacity:1"></stop>
                  <stop offset="100%" style="stop-color:#d13a04;stop-opacity:1"></stop>
                </linearGradient>
              </defs>
            </svg>
          </div>

          <div class="space-y-6">
            <Title tag="h1" variant="h1" classList="!text-5xl md:!text-7xl !mb-0">
              Got your message.
            </Title>
            <p class="text-xl md:text-2xl text-gray-600 leading-relaxed max-w-2xl mx-auto">
              I'll review it and respond within 24 hours. Looking forward to working with you.
            </p>
          </div>

          <div class="flex flex-wrap gap-4 justify-center pt-4">
            <Link to="/projects/" variant="filled">View My Work</Link>
            <Link to="/about/" variant="outline">Learn More</Link>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <style>
    @keyframes scale-in {
      0% {
        transform: scale(0);
        opacity: 0;
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    .animate-scale-in {
      animation: scale-in 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    @keyframes draw-circle {
      0% {
        stroke-dashoffset: 565;
        opacity: 0;
      }
      50% {
        opacity: 1;
      }
      100% {
        stroke-dashoffset: 0;
        opacity: 1;
      }
    }

    .animate-draw-circle {
      stroke-dasharray: 565;
      stroke-dashoffset: 565;
      animation: draw-circle 1.2s ease-out 0.3s forwards;
    }

    @keyframes draw-check {
      0% {
        stroke-dashoffset: 120;
        opacity: 0;
      }
      50% {
        opacity: 1;
      }
      100% {
        stroke-dashoffset: 0;
        opacity: 1;
      }
    }

    .animate-draw-check {
      stroke-dasharray: 120;
      stroke-dashoffset: 120;
      animation: draw-check 0.6s ease-out 1s forwards;
    }
  </style>
</Layout>
