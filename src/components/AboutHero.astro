---
import Container from "./ui/Container.astro";
import Title from "./ui/Title.astro";
import HeroStats from "./HeroStats.astro";
---

<section class="relative py-6 md:py-12">
  <Container>
    <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-start">
      <div class="space-y-8 order-1">
        <div class="space-y-4">
          <Title tag="h1" variant="h1" classList="!text-5xl md:!text-7xl !mb-0">
            I build websites that work.
          </Title>
          <p class="text-xl md:text-2xl text-gray-600">
            No fluff, no buzzwords. Just clean code, fast delivery, and results you can measure.
          </p>
        </div>

        <HeroStats />

        <div>
          <p class="text-sm text-gray-500 mb-3">What I work with:</p>
          <p class="text-base text-gray-700">
            React • Laravel • PHP • JavaScript • Tailwind • WordPress • Any Page Builder
          </p>
        </div>
      </div>

      <div class="order-2 space-y-6">
        <div
          class="bg-gradient-to-br from-blue-base to-blue-600 rounded-2xl p-8 text-white shadow-xl hover:shadow-2xl hover:scale-[1.02] opacity-0 translate-y-10 transition-all duration-[1500ms] ease-out"
          x-data="{ show: false }"
          x-init="setTimeout(() => show = true, 100)"
          x-bind:class="show && 'opacity-100 translate-y-0'"
        >
          <p class="text-sm font-bold uppercase tracking-wider opacity-90 mb-3">What I Do</p>
          <p class="text-xl font-medium leading-relaxed">
            Build custom websites and web applications from scratch
          </p>
        </div>

        <div
          class="bg-gradient-to-br from-orange-base to-orange-600 rounded-2xl p-8 text-white shadow-xl hover:shadow-2xl hover:scale-[1.02] opacity-0 translate-y-10 transition-all duration-[1500ms] ease-out"
          x-data="{ show: false }"
          x-init="setTimeout(() => show = true, 300)"
          x-bind:class="show && 'opacity-100 translate-y-0'"
        >
          <p class="text-sm font-bold uppercase tracking-wider opacity-90 mb-3">How I Work</p>
          <p class="text-xl font-medium leading-relaxed">
            Direct communication, clear timelines, no surprises
          </p>
        </div>

        <div
          class="bg-gradient-to-br from-blue-base to-blue-600 rounded-2xl p-8 text-white shadow-xl hover:shadow-2xl hover:scale-[1.02] opacity-0 translate-y-10 transition-all duration-[1500ms] ease-out"
          x-data="{ show: false }"
          x-init="setTimeout(() => show = true, 500)"
          x-bind:class="show && 'opacity-100 translate-y-0'"
        >
          <p class="text-sm font-bold uppercase tracking-wider opacity-90 mb-3">Who I Work With</p>
          <p class="text-xl font-medium leading-relaxed">
            Businesses ready to invest in quality and results
          </p>
        </div>
      </div>
    </div>
  </Container>
</section>
