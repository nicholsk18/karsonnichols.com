---
import Link from "./ui/Link.astro";
import { siteConfig, getYearsOfExperience } from "../data/siteConfig";

interface Props {
  variant?: "default" | "compact";
  projectsLink?: string;
}

const { variant = "default", projectsLink = "/projects/" } = Astro.props;

const stats = [
  { value: `${siteConfig.projectsDelivered}+`, label: "Projects", color: "text-blue-base" },
  { value: `${getYearsOfExperience()}+`, label: "Years", color: "text-orange-base" },
  { value: siteConfig.responseTime, label: "Response", color: "text-blue-base" },
];
---

<div class="flex justify-center md:justify-start w-full">
  <div
    class="flex flex-wrap items-center justify-center gap-2 md:gap-4 px-3 md:px-4 py-2 md:py-3 backdrop-blur-xl bg-white/80 rounded-xl border-2 border-white shadow-lg w-full md:w-auto"
  >
    {
      stats.map((stat, index) => (
        <>
          <div class="flex items-baseline gap-1 md:gap-2">
            <div class={`text-xl md:text-4xl font-bold ${stat.color}`}>{stat.value}</div>
            <div class="text-[10px] md:text-sm text-gray-600">{stat.label}</div>
          </div>
          {index < stats.length - 1 && <div class="w-px h-6 md:h-8 bg-gray-200" />}
        </>
      ))
    }
  </div>
</div>

<div class="flex flex-col md:flex-row gap-4 w-full md:w-auto md:justify-start">
  <Link to="/contact/" variant="filled" classList="w-full md:w-auto text-center"
    >Start a Project</Link
  >
  <Link to={projectsLink} variant="outline" classList="w-full md:w-auto text-center"
    >See My Work</Link
  >
</div>
